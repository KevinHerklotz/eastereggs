{
  "extends": ["airbnb-base"],
  "rules": {
    "max-len": [
      "error",
      100,
      2,
      {
        "ignoreUrls": true,
        "ignoreComments": true,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "semi": 0,
    "no-restricted-syntax": 0,
    "arrow-parens": ["error", "as-needed"],
    "import/no-extraneous-dependencies": 0
  },
  "parser": "babel-eslint",
  "globals": {
    "window": true,
    "document": true
  }
}
